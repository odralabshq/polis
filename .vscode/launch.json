{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI",
            "cargo": {
                "args": ["build", "--bin=polis", "--manifest-path=cli/Cargo.toml"],
                "filter": {
                    "name": "polis",
                    "kind": "bin"
                }
            },
            "args": ["status"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
